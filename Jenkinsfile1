pipeline {
    agent any

      environment {
        VAULT_PASSWORD = credentials('VAULT_PASSWORD')  // Assuming you have stored your vault password in Jenkins credentials
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository containing the Ansible playbook
                git branch: 'main', url: 'https://github.com/mohan2020coder/demo-webapp.git'
            }
        }
        
    
        
        stage('sudo demo Container') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'SUDO_PASS_ID', variable: 'SUDO_PASSWORD')]) {
                        sh 'ansible-playbook hosts hello_world.yml --extra-vars "ansible_become_pass=$SUDO_PASSWORD"'
                    }
                }
            }
        }


        
    }

    post {
        always {
            // Clean up
            cleanWs()
        }
    }
}
