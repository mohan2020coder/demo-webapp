pipeline {
    agent any

      environment {
        VAULT_PASSWORD = credentials('VAULT_PASSWORD')  // Assuming you have stored your vault password in Jenkins credentials
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository containing the Ansible playbook
                git branch: 'main', url: 'https://github.com/mohan2020coder/demo-webapp.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install necessary packages
                sh 'sudo yum update'
               
            }
        }
        

        stage('Run Ansible Playbook') {
            steps {
                // Create a temporary file with the Vault password
                script {
                    writeFile file: '/tmp/vault_pass', text: "${env.VAULT_PASSWORD}"
                }

                // Run the Ansible playbook with the vault password file
                sh 'ansible-playbook -i hosts hello_world.yml --vault-password-file /tmp/vault_pass'

                // Remove the temporary Vault password file
                sh 'rm -f /tmp/vault_pass'
            }
        }

        
    }

    post {
        always {
            // Clean up
            cleanWs()
        }
    }
}
